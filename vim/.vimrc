syntax on
set number
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent

set smartcase

set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

set nohlsearch
set incsearch

set updatetime=50

autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
